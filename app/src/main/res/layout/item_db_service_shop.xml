<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="position"
            type="java.lang.Integer"/>

        <variable
            name="itemClick"
            type="com.dreamliner.rvhelper.interfaces.OnItemClickListener"/>

        <variable
            name="item"
            type="com.dreamliner.retrofit.sample.entity.shop.Good"/>

        <import type="com.dreamliner.retrofit.sample.util.ShopFormatUtil"/>
    </data>

    <LinearLayout
        android:id="@+id/social_service_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{()->itemClick.onItemClick(socialServiceLl,position,item)}"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:imageUrl="@{item.goodImageSmall}"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{item.name}"
                    android:textColor="@color/default_title_tv_color"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="@{ShopFormatUtil.getPriceVal(item.price)}"
                    android:textColor="#FF6950"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{item.introduction}"
                android:textSize="12sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@{ShopFormatUtil.getDistanceVal(item.storeAbbreviation,item.distance)}"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@{ShopFormatUtil.getVisitCount(item.visitCount)}"
                    android:textSize="12sp"
                    />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</layout>